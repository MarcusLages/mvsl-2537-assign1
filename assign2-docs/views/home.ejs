<%- include('template/header') %>
    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <div class="list-group">
        <h1>Hello, <%= username %>! </h1>
        <br/>
        <a href="/members" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
            <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
                <h6 class="mb-0">Members section</h6>
                <p class="mb-0 opacity-75">Check up on your (un)motivating phrases.</p>
            </div>
            </div>
        </a>
        <a href="/admin" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
            <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
                <h6 class="mb-0">Admin section</h6>
                <p class="mb-0 opacity-75">Check everyone's role and permission</p>
            </div>
            </div>
        </a>
        <a href="/logout" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
            <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
                <h6 class="mb-0">Log out</h6>
                <p class="mb-0 opacity-75">Finish your session.</p>
            </div>
            </div>
        </a>
        </div>
    </div>
<%- include('template/footer') %>